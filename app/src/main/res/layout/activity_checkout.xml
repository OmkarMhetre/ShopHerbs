<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CheckoutActivity">

    <TextView
        android:id="@+id/nameCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:padding="10dp"
        android:hint="Name"
        />
    <EditText
        android:id="@+id/cityCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:padding="10dp"
        android:hint="City"
        />
    <EditText
        android:id="@+id/stateCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cityCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:padding="10dp"
        android:hint="State"
        />
    <TextView
        android:id="@+id/totalpriceCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stateCheckout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:padding="10dp"
        android:text="Total price to pay"
        />
    <TextView
        android:id="@+id/priceCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stateCheckout"
        app:layout_constraintStart_toEndOf="@id/totalpriceCheckout"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:padding="10dp"
        android:text="000"
        />
    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/priceCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:text="pay"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>